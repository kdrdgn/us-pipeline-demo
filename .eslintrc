{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "globals": {
    "d3": true,
    "sk": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": [2, { "ignore": ["children", "t"] }],
    "react/jsx-one-expression-per-line": "off",
    "jsx-a11y/label-has-for": [ 2, {
      "required": {
        "every": ["id"]
      },
      "allowChildren": false
    }]
  }
}